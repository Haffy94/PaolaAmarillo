<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Paola Amarillo</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PaolaAmarillo.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="icon" type="image/png" href="~/images/Paola011.png" />    
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm  mb-3 fixed-top">
            <div class="container-fluid">
                <!-- Logo y nombre -->
                <!--
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/PaolaLogo3.png" alt="Logo" style="height: 32px; width: auto; margin-right: 8px;" />
                    Paola Amarillo
                </a>
                -->

                <!-- Botón menú móvil -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Menú principal alineado a la derecha -->
                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav ms-auto align-items-center">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Acerca de mí</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownServicios" role="button"
                            data-bs-toggle="dropdown" aria-expanded="false">
                                Servicios
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownServicios">
                                <li><a class="dropdown-item" href="#Nlp">Programación Neurolingüística (PNL)</a></li>
                                <li><a class="dropdown-item" href="#Graphology">Grafología aplicada al entorno empresarial</a></li>
                                <li><a class="dropdown-item" href="#rrhh">Consultoría en Recursos Humanos y Desarrollo de Equipos</a></li>
                                <li><a class="dropdown-item" href="#administrativo">Experiencia Administrativa, Contable y Legal</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#migrando-emociones">Migrando Emociones</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Contacto</a>
                        </li>

                        <!-- Botón de idioma dentro del menú -->
                        <li class="nav-item ms-3">
                            <button class="btn btn-outline-primary btn-sm btn-language">
                                <i class="fa-solid fa-globe"></i> ES
                            </button>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <!-- Imagen con redes sociales -->
    <section class="hero-banner position-relative">
        <div class="banner-container">
            <div class="banner-text">
                <h1>Paola Amarillo</h1>
                <p>Máster en Programación Neurolingüística – Perito Grafóloga – Selectora de Personal</p>
            </div>

            <!-- Redes sociales flotantes a la derecha -->
            <div class="social-floating">
                <a href="https://facebook.com" target="_blank" aria-label="Facebook"><i class="fab fa-facebook-f"></i></a>
                <a href="https://instagram.com" target="_blank" aria-label="Instagram"><i class="fab fa-instagram"></i></a>
                <a href="https://youtube.com" target="_blank" aria-label="YouTube"><i class="fab fa-youtube"></i></a>
                <a href="https://linkedin.com" target="_blank" aria-label="LinkedIn"><i class="fab fa-linkedin-in"></i></a>
            </div>
        </div>
    </section>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
        <footer class="footer text-muted row align-items-center py-3 position-relative" >            
            <div class="col-md-6 text-start">
                &copy; 2025 - PaolaAmarillo - 
                <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>      
        </footer>
    </div>

   


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
