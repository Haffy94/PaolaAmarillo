<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Paola Amarillo</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PaolaAmarillo.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="icon" type="image/png" href="~/images/Paola011.png" />    
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light box-shadow mb-3 fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/PaolaLogo3.png" alt="Logo" style="height: 32px; width: auto; margin-right: 8px;" />
                    Paola Amarillo
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Acerca de mí</a>
                        </li>
                        <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownServicios" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Servicios
                        </a>
                        <ul class="dropdown-menu dropdown-menu-transparent" aria-labelledby="navbarDropdownServicios">
                            <li><a class="dropdown-item" href="#Nlp">Programación Neurolingüística (PNL)</a></li>
                            <li><a class="dropdown-item" href="#Graphology">Grafología aplicada al entorno empresarial</a></li>
                            <li><a class="dropdown-item" href="#rrhh">Consultoría en Recursos Humanos y Desarrollo de Equipos</a></li>
                            <li><a class="dropdown-item" href="#administrativo">Experiencia Administrativa, Contable y Legal</a></li>
                        </ul>
                        </li>
                        <li class="nav-item"></li>
                            <a class="nav-link" href="#migrando-emociones">Migrando Emociones</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Contacto</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container py-3">
            <div class="row align-items-center">
                <div class="col-md-6 text-start">
                    &copy; 2025 - PaolaAmarillo - 
                    <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
                <div class="col-md-6 text-center">
                    <a href="https://facebook.com" target="_blank" class="text-muted mx-2">
                        <i class="fab fa-facebook fa-lg"></i>
                    </a>
                    <a href="https://instagram.com" target="_blank" class="text-muted mx-2">
                        <i class="fab fa-instagram fa-lg"></i>
                    </a>
                    <a href="https://twitter.com" target="_blank" class="text-muted mx-2">
                        <i class="fab fa-twitter fa-lg"></i>
                    </a>
                    <a href="https://linkedin.com" target="_blank" class="text-muted mx-2">
                        <i class="fab fa-linkedin fa-lg"></i>
                    </a>
                </div>
            </div>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
