@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<div id="Graphology" class="container-fluid">
    <div class="container py-5">
        <div class="row align-items-center">
            <div class="col-md-5">
                <img src="~/images/grafologia.png" alt="grafologia" class="img-fluid rounded-3 shadow" style="max-height:350px;">
            </div>
            <div class="col-md-7">
                <h2 class="fw-bold mb-3">@Localizer["GraphologyTitle"]</h2>

                <p><strong>@Localizer["GraphologySection1Title"]</strong></p>
                <p>@Localizer["GraphologySection1Text"]</p>

                <p><strong>@Localizer["GraphologySection2Title"]</strong></p>
                <p>@Localizer["GraphologySection2Text"]</p>

                <p><strong>@Localizer["GraphologySection3Title"]</strong></p>
                <ul>
                    <li>@Localizer["GraphologyList1"]</li>
                    <li>@Localizer["GraphologyList2"]</li>
                    <li>@Localizer["GraphologyList3"]</li>
                    <li>@Localizer["GraphologyList4"]</li>
                </ul>

                <p><strong>@Localizer["GraphologySection4Title"]</strong></p>
                <p>@Localizer["GraphologySection4Text"]</p>
            </div>
        </div>
    </div>    
</div>
