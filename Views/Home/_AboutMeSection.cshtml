@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<div id="AboutMe" class="container py-5">
  <div class="row align-items-center">    

    <!-- Texto primero en desktop, segundo en móvil -->
    <div class="col-md-7 order-2 order-md-1">
      <p>@Localizer["AboutMeParagraph1"]</p>
      <p>@Localizer["AboutMeParagraph2"]</p>
    </div>

    <!-- Imagen segundo en desktop, primero en móvil -->
    <div class="col-md-5 order-1 order-md-2 text-center">
      <img src="~/images/paolaPerfil03.png" alt="Paola Amarillo" class="img-profile">
    </div>

  </div>
</div>
